#!/usr/bin/env bash

VERSION='0.0.1'
CH_SHEETS=${CH_SHEETS:-$HOME/.ch-sheets}
CH_REPO=${CH_REPO:-git://github.com/visionmedia/ch-sheets.git}

if [ -d $CH_SHEETS ]; then
  case $1 in
    -v|--version)
      echo "ch $VERSION"
      ;;
    help|-h|--help)
      echo 'usage: ch ch'
      echo '       ch ch [search|find|list] [sheet]'
      echo '       ch locate [sheet]'
      echo '       ch update'
      echo '       ch [-v|--version] '
      ;;
    update)
      cd $CH_SHEETS
      git pull origin master 2> /dev/null
      ;;
    locate)
      if [ $2 ]; then
        find $CH_SHEETS -name *$2*.sheet -type f
      else
        find $CH_SHEETS -name *.sheet -type f
      fi
      ;;
    search|find|list)
      ch locate $2 | xargs basename -s '.sheet'
      ;;
    *)
      echo
      ch locate $1 | head -n 1 | xargs cat | less
      ;;
  esac
else
  git clone $CH_REPO $CH_SHEETS &&
  echo Initialized cheat sheets at $CH_SHEETS
fi


